@{
    Layout = "_layout";
}
@model Blog


<div>
    <h4>Blog</h4>
    <a asp-controller="Blog" asp-action="Update" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Model.Title
        </dd>
        <dt class="col-sm-2">
            Author
        </dt>
        <dd class="col-sm-10">
            @Model.Author
        </dd>
        <dt class="col-sm-2">
            Created
        </dt>
        <dd class="col-sm-10">
            @Model.CreatedAt
        </dd>
        <dt class="col-sm-2">
            Last Update
        </dt>
        <dd class="col-sm-10">
            @Model.UpdatedAt
        </dd>
    </dl>
</div>

<a asp-controller="Comment" asp-action="Create" asp-route-id="@Model.Id" class="btn btn-primary">Add Comment</a>

<div>
    @foreach (var comment in Model.Comments)
    {
        <table class="table table-striped">
            <tr>
                <td>Created: @comment.CreatedAt</td>
                <td style="max-width: 10px;">
                    <a asp-controller="Comment" asp-action="Index" asp-route-id="@comment.Id">Open</a>
                </td>
                <td style ="max-width: 10px;">
                    <a asp-controller="Comment" asp-action="Delete" asp-route-id="@comment.Id">Delete</a>
                </td>
            </tr>
            <tr>
                <td colspan="3">@comment.Content</td>
            </tr>
        </table>
        <br />
    }
</div>
