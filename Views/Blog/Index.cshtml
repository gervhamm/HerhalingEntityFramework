@{
    Layout = "_Layout";
}
@model List<Blog>

<a asp-controller="Blog" asp-action="Create" class="btn btn-primary">Create</a>

<table class="table table-striped">
    <tr>
        <th>Id</th>
        <th>Title</th>
        <th>Author</th>
        <th>Details</th>
        <th>Delete</th>
    </tr>
    @foreach (var blog in Model)
    {
        <tr>
            <td>@blog.Id</td>
            <td>@blog.Title</td>
            <td>@blog.Author</td>
            <td>
                <a asp-controller="Blog" asp-action="Show" asp-route-id="@blog.Id">Open</a>
            </td>
            <td>
                <a asp-controller="Blog" asp-action="Delete" asp-route-id="@blog.Id">Delete</a>
            </td>
        </tr>
    }
</table>    