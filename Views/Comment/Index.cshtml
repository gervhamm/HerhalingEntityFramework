@{
    Layout = "_Layout";
}
@model Comment

<h1>@ViewData["Title"]</h1>
<div>
    <form asp-controller="Comment" asp-action="Update" asp-route-id="@Model.Id">
        <input type="hidden" asp-for="BlogId" />
        <table class="table table-striped">
            <tr>
                <td>Created: @Model.CreatedAt</td>
            </tr>
            <tr>
                <td>
                    <textarea style="width: 100%; padding: 10px;" asp-for="Content" placeholder="@Model.Content"></textarea>
                    <span asp-validation-for="Content"></span>
                </td>
             </tr>
        </table>
        <input type="submit" value="Edit" class="btn btn-primary" />
    </form>  
</div>
<br />
<div>
    <form asp-controller="Comment" asp-action="Delete" asp-route-id="@Model.Id">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
